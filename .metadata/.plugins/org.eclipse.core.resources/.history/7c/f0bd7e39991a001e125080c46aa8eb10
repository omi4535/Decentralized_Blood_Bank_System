package com.blood_bank_system.DAO;

import com.blood_bank_system.tables.admistrator;

public class login {

public admistrator validateLogin(String username, String password) {
	admistrator admin;
}
try {	
	String query = "SELECT * FROM administrators WHERE username = ? AND password = ?";
    stmt = conn.prepareStatement(query);
    stmt.setString(1, username);
    stmt.setString(2, password);
    rs = stmt.executeQuery();

    if (rs.next()) {
        int adminId = rs.getInt("id");
        int bloodBankId = rs.getInt("blood_bank_id");
        String name = rs.getString("name");
        String email = rs.getString("email");

        // Create Admin object
        admin = new admistrator(adminId, bloodBankId, name, email, username, password);
    }
} catch (SQLException e) {
    e.printStackTrace();
} finally {
    closeResources(conn, stmt, rs);
}

return admin;	
}
